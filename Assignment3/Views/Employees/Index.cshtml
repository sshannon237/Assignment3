@model IEnumerable<Assignment3.Models.Employee>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Services)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Salary)
    </td>

    <td>
        @foreach (var service in item.Services)
        {
            <form method="post" action="/Employees/DeleteService?employeeId=@item.Id&serviceId=@service.Id">
                <span>@service.Name</span>
                <input type="submit" value="Delete Service"/>
            </form>
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new
        {
            id = item.Id
        }) |
        @Html.ActionLink("Details", "Details", new
        {
            id = item.Id
        }) |
        @Html.ActionLink("Delete", "Delete", new
        {
            id = item.Id
        })
    </td>
</tr>
    }

</table>
